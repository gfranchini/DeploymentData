<p id="notice"><%= notice %></p>

<h1>Servers</h1>

<table>
  <thead>
    <tr>
      <th>Host name</th>
      <th>Ip address</th>
      <th>Operating system</th>
      <th>Cpu cores</th>
      <th>Memory</th>
      <th>Disk space</th>
      <th>Form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.host_name %></td>
        <td><%= server.ip_address %></td>
        <td><%= server.operating_system %></td>
        <td><%= server.cpu_cores %></td>
        <td><%= server.memory %></td>
        <td><%= server.disk_space %></td>
        <td><%= server.form %></td>
        <td><%= link_to 'Show', server %></td>
        <td><%= link_to 'Edit', edit_server_path(server) %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

